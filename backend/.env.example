# backend/.env.example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===== SECURITY (REQUIRED) =====
# Admin password for creating super admin
# IMPORTANT: Change this to a strong password!
ADMIN_PASSWORD=ChangeThisToStrongPassword123!

# JWT Secret for token encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
# IMPORTANT: Must be at least 64 characters long!
JWT_SECRET=GENERATE_YOUR_OWN_SECRET_HERE

# ===== DATABASE =====
# PostgreSQL Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=simmaci

# Or use SQLite for development (comment out postgres above)
# DB_TYPE=sqlite
# DB_DATABASE=simmaci.db

# ===== APPLICATION =====
NODE_ENV=development
PORT=3000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# ===== EMAIL (Optional) =====
# Gmail SMTP for notifications
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# ===== PRODUCTION EXAMPLE =====
# When deploying to production, use these instead:
# NODE_ENV=production
# FRONTEND_URL=https://your-production-domain.com
# DB_HOST=your-production-db-host
# Use strong, unique secrets!
